<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.craterstudio.juanfrancrater.ipewa">

    <application
        android:name="com.craterstudio.juanfrancrater.ipewa.util.ThisApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.Splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.craterstudio.juanfrancrater.ipewa.ui.login.View.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.Welcome.view.WelcomeActivity" />
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.about.AboutActivity">


        </activity>
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.pref.PrefferencesActivity" />
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.project.View.AddProjectActivity" />
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.project.View.EditProjectActivity" />
        <activity
            android:name="com.craterstudio.juanfrancrater.ipewa.ui.task.View.AddTaskActivity"
            android:label="@string/title_activity_add_task"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.craterstudio.juanfrancrater.ipewa.ui.task.View.EditTaskActivity"
            android:label="@string/title_activity_edit_task"
            android:theme="@style/AppTheme" />
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.Register.View.RegisterActivity" />
        <activity android:name="com.craterstudio.juanfrancrater.ipewa.ui.project.View.DetailProjectActivity" />
        <activity
            android:name="com.craterstudio.juanfrancrater.ipewa.ui.project.View.KanbanActivity"
            android:label="@string/title_activity_kanban"
            android:theme="@style/AppTheme" />

        <service android:name="com.craterstudio.juanfrancrater.ipewa.util.Chat.FireBaseServiceChat">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.craterstudio.juanfrancrater.ipewa.util.Chat.ChatActivity" />
        <activity android:name=".ui.Meta.View.AddMetasActivity"/>
        <activity android:name=".ui.Meta.View.EditMetaActivity"/>

        <service
            android:name="com.craterstudio.juanfrancrater.ipewa.util.Chat.FireBaseMessageService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>